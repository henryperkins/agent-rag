{
  "name": "agent-rag-monorepo",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\" --names \"backend,frontend\" --prefix-colors \"cyan,magenta\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "lint": "pnpm -r lint",
    "build": "pnpm -r build",
    "test": "pnpm -r --if-present test",
    "typecheck": "pnpm -r --if-present typecheck",
    "format": "prettier -w \"**/*.{md,json,yml,yaml}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "backend/**/*.ts": [
      "bash -lc 'cd backend && pnpm lint --fix'"
    ],
    "frontend/**/*.{ts,tsx}": [
      "bash -lc 'cd frontend && pnpm lint --fix'"
    ],
    "**/*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
